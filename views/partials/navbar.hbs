<head>
  <title>{{title}}</title>
  <link rel="stylesheet" href="/styles.css" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
</head>

<nav>
  <div style="display:flex;align-items:center;gap:.8rem">
    <a href="/games"><img src="/logo.png" alt="logo" style="height:36px" /></a>
    <a href="/games">Home</a>
    {{#if user}}<a href="/game/new">Create</a>{{/if}}
  </div>

  <div style="display:flex;align-items:center;gap:1rem">
    {{#if user}}
      <span>Hello&nbsp;<strong>{{user.userid}}</strong></span>
      {{#if (eq user.role "admin")}}<a href="/admin">Admin</a>{{/if}}
      <a href="/logout" style="text-decoration:underline">Log&nbsp;out</a>
    {{else}}
      <a href="/auth"><button class="primary">Log&nbsp;in</button></a>
      <a href="/auth"><button class="neutral">Sign&nbsp;up</button></a>
    {{/if}}
  </div>
</nav>